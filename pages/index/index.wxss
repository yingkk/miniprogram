/**index.wxss**/

.main {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 15px;
}

.area-item {
  width: 100rpx;
  height: 100rpx;
  padding: 20px 10px;
}

.area-item-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.img {
  width: 100rpx;
  height: 100rpx;
}

.hot {
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}

.scroll-view {
  padding-top: 20px;
  width: 100%;
  height: 140rpx;
  white-space: nowrap;
}

.hot-item {
  position: relative;
  padding-left: 20px;
  width: 300rpx;
  height: 130rpx;
  display: inline-block;
}

.hot-item-label {
  font-size: 22rpx;
  display: block;
}

.hot scroll-view image {
  width: 100%;
  height: 130rpx;
}

.hot-item-no {
  position: absolute;
  left: 60rpx;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30%;
  background-color: #cd3700;
  font-size: 26rpx;
  text-align: center;
  line-height: 30rpx;
}

.other {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
  width: 100%;
  font-size: 36rpx;
  /* background-color: #f8f8f8; */
}

.other-title {
  height: 50rpx;
  width: 100%;
  padding: 20px 0 10px 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1px solid #ebeaea;
}

.other-title button {
  border: none;
  border-radius: 0;
}

.other-title .actived {
  border-bottom: 3px solid #cd3700;
}

.other-items {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.other-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding-top: 10px;
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #f8f8f8;
}

.other-item-img {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  padding: 0 20px;
}

.other-item-img image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10%;
}

.other-item-desc {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.other-item-desc-tag {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  color: #1e90ff;
  padding-top: 8px;
}

.tag-item {
  padding: 0 2px;
  display: inline-block;
  margin-right: 10px;
  border: 1px solid #87ceff;
}

.other-item-score {
  padding-top: 8px;
  font-size: 22rpx;
  color: #cd3700;
}

.other-item-address {
  padding-top: 8px;
  font-size: 22rpx;
  color: #a9a9a9;
}
